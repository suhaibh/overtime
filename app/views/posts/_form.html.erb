<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |error| %>
			<%= js add_gritter(error, image: :error, title: "Form Errors", sticky: false, time: 4000)%>
		<% end %>
	<% end %>

	<div class="form-group">
		<%= f.label :rationale, class: 'label-control' %>
		<%= f.text_area :rationale, class: 'form-control' %>
	</div>
	
	<div class="form-group">
		<%= f.label :date, class: 'label-control' %>
		<%= f.date_field :date, class: 'form-control' %>
	</div>
	
	<%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>