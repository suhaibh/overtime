<%= form_for @post do |f| %>
	
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |error| %>
			<%= js add_gritter(error, image: :error, title: "Form Errors", sticky: false, time: 4000)%>
		<% end %>
	<% end %>

	<div class="form-group">
		<%= f.label :daily_hours, class: 'label-control' %>
		<%= f.number_field :daily_hours, step: 0.5, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :work_performed, class: 'label-control' %>
		<%= f.text_area :work_performed, class: 'form-control' %>
	</div>
	
	<div class="form-group">
		<%= f.label :date, class: 'label-control' %>
		<%= f.date_field :date, class: 'form-control' %>
	</div>

	<%= render partial: 'status', locals: {f: f} if current_user.admin? %>

	<%= f.submit "Save", class: 'btn btn-primary' %>
<% end %>